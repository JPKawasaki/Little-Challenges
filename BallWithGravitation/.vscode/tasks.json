{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++17",
        "-I./include",
        "-L./lib",
        "src/main.cpp",
        "src/glad.c",
        "-lglfw3dll",
        "-o",
        "myprogram.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}
